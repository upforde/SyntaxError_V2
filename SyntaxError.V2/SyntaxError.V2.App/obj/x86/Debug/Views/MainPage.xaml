<Page x:ConnectionId='1'
    x:Class="SyntaxError.V2.App.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:SyntaxError.V2.App.Helpers"
    xmlns:challenges="using:SyntaxError.V2.Modell.Challenges"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d"
    NavigationCacheMode="Enabled">
    <Page.Resources>
        <CollectionViewSource x:ConnectionId='2' x:Name="ChallengesCVS" IsSourceGrouped="True"/>
    </Page.Resources>
    <Grid x:ConnectionId='3' 
        x:Name="ContentArea"
        Margin="5, 5, 5, 0"
        Padding="0, 0, 0, 5"
        Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
                    
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!--Top text-->
        <StackPanel Grid.Column="0"
                    Grid.Row="0"
                    BorderThickness="0, 0, 5, 0"
                    BorderBrush="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                    Padding="15">
            <TextBlock Text="Game Profiles" Style="{ThemeResource TitleTextBlockStyle}"/>
        </StackPanel>
        <StackPanel Grid.Column="1"
                    Grid.Row="0"
                    BorderThickness="5, 0, 0, 0"
                    BorderBrush="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                    Padding="15">
            <TextBlock Text="Game Profile Challenges" Style="{ThemeResource TitleTextBlockStyle}"/>
        </StackPanel>
        <!--The GameProfile list-->
        <StackPanel Grid.Column="0"
                    Grid.Row="1"
                    BorderThickness="0, 0, 5, 0"
                    BorderBrush="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <ProgressBar x:ConnectionId='25' x:Name="listViewProgressBar" IsIndeterminate="True"/>
            <ListView x:ConnectionId='26' x:Name="GameProfilesList"
                                                                     
                        SelectionMode="Single"
                                                                            >
                <ListView.ItemTemplate>
                    <DataTemplate x:Name="SingleLineDataTemplate"
                                                                         >
                        <StackPanel x:ConnectionId='27'>
                            <TextBlock x:ConnectionId='28'                                            
                                        Style="{ThemeResource BaseTextBlockStyle}"
                                        Foreground="{ThemeResource SystemControlPageTextBaseHighBrush}"/>
                            <TextBlock x:ConnectionId='29'                                                                         
                                        Style="{ThemeResource BodyTextBlockStyle}"
                                        Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
        <!--Bottom AppBarButtons-->
        <StackPanel Grid.Column="0"
                    Grid.Row="2"
                    BorderThickness="0, 0, 5, 0"
                    BorderBrush="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Padding="0, 0, 5, 0">
                <AppBarButton x:ConnectionId='21' x:Name="PlayButton"
                              IsEnabled="False"
                              IsTabStop="False"
                              Icon="Play"
                              Label="Play"
                                                            />
                <AppBarButton x:ConnectionId='22' x:Name="AddButton"
                              IsTabStop="False"
                              Icon="Add"
                              Label="Add"
                              Visibility="Visible"
                                                           />
                <AppBarButton x:ConnectionId='23' x:Name="EditButton"
                              IsEnabled="False"
                              IsTabStop="False"
                              Icon="Edit"
                              Label="Edit"
                              Visibility="Visible"
                                                                                   
                              CommandParameter="{Binding ElementName=GameProfilesList, Path=SelectedItem }"/>
                <AppBarButton x:ConnectionId='24' x:Name="DeleteButton"
                              IsTabStop="False"
                              Icon="Delete"
                              Label="Delete"
                              Visibility="Visible"
                                                                                   
                              CommandParameter="{Binding ElementName=GameProfilesList, Path=SelectedItem }"/>
            </StackPanel>
        </StackPanel>
        <!--The Challenge ListView-->
        <ListView x:ConnectionId='4' x:Name="ChallengeList"
                                                                        
                  Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"
                  BorderThickness="5, 0, 0, 0"
                  BorderBrush="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsStackPanel AreStickyGroupHeadersEnabled="True"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.GroupStyle>
              <GroupStyle>
                <GroupStyle.HeaderTemplate>
                  <DataTemplate>
                    <TextBlock Text="{Binding Key}"/>
                  </DataTemplate>
                </GroupStyle.HeaderTemplate>
              </GroupStyle>
            </ListView.GroupStyle>
            <ListView.ItemTemplate>
                <DataTemplate                                      >
                    <Grid x:ConnectionId='6'>
                        <Grid x:ConnectionId='7'                                      >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Ellipse x:ConnectionId='18' Grid.Column="0" Grid.RowSpan="2"
                                        Visibility="Visible" Height="30" Width="30"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                                                                      />
                            <StackPanel Grid.Row="0" Grid.Column="1">
                                <TextBlock x:ConnectionId='19'                                                     
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Stretch" />
                                <TextBlock x:ConnectionId='20'                                                          
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Stretch"
                                            Style="{ThemeResource BodyTextBlockStyle}"
                                            Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                            </StackPanel>
                        </Grid>
                        <Grid x:ConnectionId='8'                                       >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Ellipse x:ConnectionId='16' Grid.Column="0"
                                        Visibility="Visible" Height="30" Width="30"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                                                                      />
                            <TextBlock x:ConnectionId='17'                                                           
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Stretch"/>
                        </Grid>
                        <Grid x:ConnectionId='9'                                       >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Ellipse x:ConnectionId='14' Grid.Column="0"
                                        Visibility="Visible" Height="30" Width="30"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                                                                      />
                            <TextBlock x:ConnectionId='15'                                                           
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Stretch"/>
                        </Grid>
                        <Grid x:ConnectionId='10'                                          >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Ellipse x:ConnectionId='11' Grid.Column="0" Grid.RowSpan="2"
                                        Visibility="Visible" Height="30" Width="30"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                                                                      />
                            <StackPanel Grid.Row="0" Grid.Column="1">
                                <TextBlock x:ConnectionId='12'                                        
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Stretch" />
                                <TextBlock x:ConnectionId='13'                                                           
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Stretch"
                                            Style="{ThemeResource BodyTextBlockStyle}"
                                            Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
