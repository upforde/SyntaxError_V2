<Page x:ConnectionId='1'
    x:Class="SyntaxError.V2.App.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:SyntaxError.V2.App.Helpers"
    xmlns:challenges="using:SyntaxError.V2.Modell.Challenges"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d"
    NavigationCacheMode="Enabled">
    <Grid x:ConnectionId='2' 
        x:Name="ContentArea"
        Margin="5, 5, 5, 0"
        Padding="0, 0, 0, 5"
        Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
                    
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!--Top text-->
        <StackPanel Grid.Column="0"
                    Grid.Row="0"
                    BorderThickness="0, 0, 5, 0"
                    BorderBrush="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                    Padding="15">
            <TextBlock Text="Game Profiles" Style="{ThemeResource TitleTextBlockStyle}"/>
        </StackPanel>
        <!--The GameProfile list-->
        <StackPanel Grid.Column="0"
                    Grid.Row="1"
                    BorderThickness="0, 0, 5, 0"
                    BorderBrush="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                        
            <ProgressBar x:ConnectionId='53' x:Name="listViewProgressBar" IsIndeterminate="True"/>

            <ListView x:ConnectionId='54' x:Name="GameProfilesList"
                                                                     
                        SelectionMode="Single"
                                                                            >
                <ListView.ItemTemplate>
                    <DataTemplate x:Name="SingleLineDataTemplate"
                                                                         >
                        <StackPanel x:ConnectionId='55'>
                            <TextBlock x:ConnectionId='56'                                            
                                        Style="{ThemeResource BaseTextBlockStyle}"
                                        Foreground="{ThemeResource SystemControlPageTextBaseHighBrush}"/>
                                        
                            <TextBlock x:ConnectionId='57'                                                                         
                                        Style="{ThemeResource BodyTextBlockStyle}"
                                        Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
        <!--Bottom AppBarButtons-->
        <StackPanel Grid.Column="0"
                    Grid.Row="2"
                    BorderThickness="0, 0, 5, 0"
                    BorderBrush="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Padding="0, 0, 5, 0">
                <AppBarButton x:ConnectionId='49' x:Name="PlayButton"
                              IsEnabled="False"
                              IsTabStop="False"
                              Icon="Play"
                              Label="Play"
                                                            />
                <AppBarButton x:ConnectionId='50' x:Name="AddButton"
                              IsTabStop="False"
                              Icon="Add"
                              Label="Add"
                              Visibility="Visible"
                                                           />
                <AppBarButton x:ConnectionId='51' x:Name="EditButton"
                              IsEnabled="False"
                              IsTabStop="False"
                              Icon="Edit"
                              Label="Edit"
                              Visibility="Visible"
                                                                                   
                              CommandParameter="{Binding ElementName=GameProfilesList, Path=SelectedItem }"/>
                <AppBarButton x:ConnectionId='52' x:Name="DeleteButton"
                              IsTabStop="False"
                              Icon="Delete"
                              Label="Delete"
                              Visibility="Visible"
                                                                                   
                              CommandParameter="{Binding ElementName=GameProfilesList, Path=SelectedItem }"/>
            </StackPanel>
        </StackPanel>
        <!--The Challenge pivot-->
        <Pivot x:ConnectionId='3' x:Name="ChallengeList"
               Grid.Column="1"
               Grid.RowSpan="3"
               BorderThickness="5, 0, 0, 0"
               BorderBrush="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                <PivotItem Header="Audience challenges">
                    <Grid Padding="5">
                        <ListView x:ConnectionId='43' x:Name="AudienceChallengeList"
                                                                                                    
                                    SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:Name="AudienceChallengeDataTemplate"
                                                                                     >
                                    <Grid x:ConnectionId='45' x:Name="challengeItemGrid">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="40"/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse x:ConnectionId='46' Grid.Column="0" Grid.RowSpan="2"
                                                    Visibility="Visible" Height="30" Width="30"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"
                                                                                                   />
                                        <StackPanel Grid.Row="0" Grid.Column="1">
                                            <TextBlock x:ConnectionId='47'                                                             
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Stretch" />
                                            <TextBlock x:ConnectionId='48'                                                         
                                                        VerticalAlignment="Top"
                                                        HorizontalAlignment="Stretch"
                                                        Style="{ThemeResource BodyTextBlockStyle}"
                                                        Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <TextBlock x:ConnectionId='44' x:Name="EmptyAudienceChallenges"
                                    Text="No items found"
                                    Visibility="Collapsed"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Style="{ThemeResource BodyTextBlockStyle}"
                                    Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                    </Grid>
                </PivotItem>
                <PivotItem Header="Crew challenges">
                    <Grid Padding="5">
                        <ListView x:ConnectionId='37' x:Name="CrewChallengeList"
                                                                                 
                                  SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:Name="CrewChallengeDataTemplate"
                                                                                     >
                                    <Grid x:ConnectionId='39' x:Name="challengeItemGrid">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="40"/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse x:ConnectionId='40' Grid.Column="0" Grid.RowSpan="2"
                                                 Visibility="Visible" Height="30" Width="30"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Left"
                                                                                                />
                                        <StackPanel Grid.Row="0" Grid.Column="1">
                                            <TextBlock x:ConnectionId='41'                                            
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Stretch" />
                                            <TextBlock x:ConnectionId='42'                                        
                                                       VerticalAlignment="Top"
                                                       HorizontalAlignment="Stretch"
                                                       Style="{ThemeResource BodyTextBlockStyle}"
                                                       Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <TextBlock x:ConnectionId='38' x:Name="EmptyCrewChallenges"
                                    Text="No items found"
                                    Visibility="Collapsed"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Style="{ThemeResource BodyTextBlockStyle}"
                                    Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                    </Grid>
                </PivotItem>
                <PivotItem Header="Multiple choice challenges">
                    <Grid Padding="5">
                        <ListView x:ConnectionId='31' x:Name="MultipleChoiceChallengeList"
                                                                                           
                                  SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:Name="MultipleChoiceChallengeDataTemplate"
                                                                                     >
                                    <Grid x:ConnectionId='33' x:Name="challengeItemGrid">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="40"/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse x:ConnectionId='34' Grid.Column="0" Grid.RowSpan="2"
                                                 Visibility="Visible" Height="30" Width="30"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Left"
                                                                                                />
                                        <StackPanel Grid.Row="0" Grid.Column="1">
                                            <TextBlock x:ConnectionId='35'                                                      
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Stretch" />
                                            <TextBlock x:ConnectionId='36'                                                       
                                                       VerticalAlignment="Top"
                                                       HorizontalAlignment="Stretch"
                                                       Style="{ThemeResource BodyTextBlockStyle}"
                                                       Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <TextBlock x:ConnectionId='32' x:Name="EmptyMultipleChoiceChallenges"
                                    Text="No items found"
                                    Visibility="Collapsed"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Style="{ThemeResource BodyTextBlockStyle}"
                                    Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                    </Grid>
                </PivotItem>
                <PivotItem Header="Music challenges">
                    <Grid Padding="5">
                        <ListView x:ConnectionId='26' x:Name="MusicChallengeList"
                                                                                  
                                  SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:Name="MusicChallengeDataTemplate"
                                                                                     >
                                    <Grid x:ConnectionId='28' x:Name="challengeItemGrid">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse x:ConnectionId='29' Grid.Column="0"
                                                 Visibility="Visible" Height="30" Width="30"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Left"
                                                                                                />
                                        <TextBlock x:ConnectionId='30'                                         
                                                    Grid.Column="1"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Stretch"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <TextBlock x:ConnectionId='27' x:Name="EmptyMusicChallenges"
                                    Text="No items found"
                                    Visibility="Collapsed"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Style="{ThemeResource BodyTextBlockStyle}"
                                    Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                    </Grid>
                </PivotItem>
                <PivotItem Header="Quiz challenges">
                    <Grid Padding="5">
                        <ListView x:ConnectionId='20' x:Name="QuizChallengeList"
                                                                                 
                                  SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:Name="QuizChallengeDataTemplate"
                                                                                     >
                                    <Grid x:ConnectionId='22' x:Name="challengeItemGrid">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="40"/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse x:ConnectionId='23' Grid.Column="0" Grid.RowSpan="2"
                                                 Visibility="Visible" Height="30" Width="30"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Left"
                                                                                                />
                                        <StackPanel Grid.Row="0" Grid.Column="1">
                                            <TextBlock x:ConnectionId='24'                                            
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Stretch" />
                                            <TextBlock x:ConnectionId='25'                                             
                                                       VerticalAlignment="Top"
                                                       HorizontalAlignment="Stretch"
                                                       Style="{ThemeResource BodyTextBlockStyle}"
                                                       Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <TextBlock x:ConnectionId='21' x:Name="EmptyQuizChallenges"
                                    Text="No items found"
                                    Visibility="Collapsed"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Style="{ThemeResource BodyTextBlockStyle}"
                                    Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                    </Grid>
                </PivotItem>
                <PivotItem Header="Screenshot challenges">
                    <Grid Padding="5">
                        <ListView x:ConnectionId='15' x:Name="ScreenshotChallengeList"
                                                                                       
                                  SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:Name="ScreenshotChallengeDataTemplate"
                                                                                     >
                                    <Grid x:ConnectionId='17' x:Name="challengeItemGrid">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse x:ConnectionId='18' Grid.Column="0"
                                                 Visibility="Visible" Height="30" Width="30"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Left"
                                                                                                />
                                        <TextBlock x:ConnectionId='19'                                               
                                                   Grid.Column="1"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Stretch"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <TextBlock x:ConnectionId='16' x:Name="EmptyScreenshotChallenges"
                                    Text="No items found"
                                    Visibility="Collapsed"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Style="{ThemeResource BodyTextBlockStyle}"
                                    Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                    </Grid>
                </PivotItem>
                <PivotItem Header="Silhouette challenges">
                    <Grid Padding="5">
                        <ListView x:ConnectionId='10' x:Name="SilhouetteChallengeList"
                                                                                       
                                  SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:Name="SilhouetteChallengeDataTemplate"
                                                                                     >
                                    <Grid x:ConnectionId='12' x:Name="challengeItemGrid">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse x:ConnectionId='13' Grid.Column="0"
                                                 Visibility="Visible" Height="30" Width="30"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Left"
                                                                                                />
                                        <TextBlock x:ConnectionId='14'                                               
                                                   Grid.Column="1"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Stretch"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <TextBlock x:ConnectionId='11' x:Name="EmptySilhouetteChallenges"
                                    Text="No items found"
                                    Visibility="Collapsed"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Style="{ThemeResource BodyTextBlockStyle}"
                                    Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                    </Grid>
                </PivotItem>
                <PivotItem Header="Sologame challenges">
                    <Grid Padding="5">
                        <ListView x:ConnectionId='4' x:Name="SologameChallengeList"
                                                                                     
                                  SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:Name="SologameChallengeDataTemplate"
                                                                                     >
                                    <Grid x:ConnectionId='6' x:Name="challengeItemGrid">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="40"/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse x:ConnectionId='7' Grid.Column="0" Grid.RowSpan="2"
                                                 Visibility="Visible" Height="30" Width="30"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Left"
                                                                                                />
                                        <StackPanel Grid.Row="0" Grid.Column="1">
                                            <TextBlock x:ConnectionId='8'                                                
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Stretch" />
                                            <TextBlock x:ConnectionId='9'                                            
                                                       VerticalAlignment="Top"
                                                       HorizontalAlignment="Stretch"
                                                       Style="{ThemeResource BodyTextBlockStyle}"
                                                       Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <TextBlock x:ConnectionId='5' x:Name="EmptySologameChallenges"
                                    Text="No items found"
                                    Visibility="Collapsed"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Style="{ThemeResource BodyTextBlockStyle}"
                                    Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                    </Grid>
                </PivotItem>
        </Pivot>
    </Grid>
</Page>

