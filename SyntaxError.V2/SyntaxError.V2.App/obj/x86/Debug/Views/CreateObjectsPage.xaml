                </Grid>
                
                <controls:AdaptiveGridView x:ConnectionId='15'                                
                                           Grid.Row="1"
                                           StretchContentForSingleRow="False"
                                           SelectionMode="None"
                                           IsItemClickEnabled="True"
                                                                           
                                           Padding="{StaticResource MediumLeftRightMargin}"
                                           DesiredWidth="180"
                                           ItemHeight="160"
                                           animations:ReorderGridAnimation.Duration="300">
                    <controls:AdaptiveGridView.ItemTemplate>
                        <DataTemplate                                          >
                            <Grid x:ConnectionId='19' x:Name="connectedElement" 
                                  Padding="{StaticResource XSmallLeftTopRightBottomMargin}"
                                  Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE7FC;"/>
                                    <TextBlock x:ConnectionId='20'
