                        <StackPanel HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Height="300" Width="200"
                                            Background="{ThemeResource ButtonPointerOverBackgroundThemeBrush}">
                                    <Image Visibility="Collapsed"/>
                                    <TextBlock Text="&#xE710;" FontSize="50"
                                               Padding="0, 125, 0, 0"
                                               FontFamily="{StaticResource SymbolThemeFontFamily}"
                                               HorizontalTextAlignment="Center"/>
                                </StackPanel>
                                <TextBox Grid.Column="1"
                                         FontSize="35"
                                         Margin="12" VerticalAlignment="Center"
                                         HorizontalAlignment="Left" />
                                <Button x:ConnectionId='7' 
                                        Grid.Column="1"
                                                                
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Right"
                                        Height="40"
                                        Width="40"
                                        Margin="5" 
                                        ToolTipService.ToolTip="Close"
                                        AutomationProperties.Name="Close">
                                    <Button.Content>
                                        <SymbolIcon Symbol="Clear" />
                                    </Button.Content>
                                </Button>
                            </Grid>
                        </StackPanel>
                        
                        <StackPanel HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Orientation="Horizontal">
                            <AppBarButton x:ConnectionId='5' Label="Save"
                                          Icon="Accept"
                                                                  />
                            <AppBarButton x:ConnectionId='6' Label="Cancel"
                                          Icon="Cancel"
                                                                  />
                        </StackPanel>
                    </Grid>
                    
                </Grid>
            </Grid>
        </PivotItem>
    </Pivot>
</Page>

