<Page x:ConnectionId='1'
    x:Class="SyntaxError.V2.App.Views.CreateObjectsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:models="using:SyntaxError.V2.App.Core.Models"
    xmlns:challengeobjects="using:SyntaxError.V2.Modell.ChallengeObjects"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d"
    NavigationCacheMode="Enabled">

    <Pivot x:ConnectionId='2' x:Name="CreatreObjectsPivot">
        <PivotItem Header="Games">
            <Grid x:ConnectionId='11' x:Name="GamesContentArea">
                <controls:AdaptiveGridView x:ConnectionId='12'
                                                                       
                                                    
                    StretchContentForSingleRow="False"
                    SelectionMode="None"
                    IsItemClickEnabled="True"
                    Padding="{StaticResource MediumLeftRightMargin}"
                    animations:Connected.ListItemElementName="itemThumbnail"
                    animations:Connected.ListItemKey="animationKeyCreateObjects"
                    DesiredWidth="180"
                    ItemHeight="160">
                    <controls:AdaptiveGridView.ItemTemplate>
                        <DataTemplate                                          >
                            <Grid x:ConnectionId='13'
                                x:Name="itemThumbnail"
                                Padding="{StaticResource XSmallLeftTopRightBottomMargin}"
                                Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE7FC;" />
                                    <TextBlock x:ConnectionId='14'
                                        Margin="{StaticResource XXSmallTopMargin}"
                                        HorizontalAlignment="Center"
                                                            
                                        Style="{ThemeResource BodyTextStyle}" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </controls:AdaptiveGridView.ItemTemplate>
                </controls:AdaptiveGridView>
            </Grid>
        </PivotItem>
        
        <PivotItem Header="Images">
            <Grid x:ConnectionId='7' x:Name="ImagesContentArea">
                <controls:AdaptiveGridView x:ConnectionId='8'
                                                                        
                                                    
                    StretchContentForSingleRow="False"
                    SelectionMode="None"
                    IsItemClickEnabled="True"
                    Padding="{StaticResource MediumLeftRightMargin}"
                    animations:Connected.ListItemElementName="itemThumbnail"
                    animations:Connected.ListItemKey="animationKeyCreateObjects"
                    DesiredWidth="180"
                    ItemHeight="160">
                    <controls:AdaptiveGridView.ItemTemplate>
                        <DataTemplate                                          >
                            <Grid x:ConnectionId='9'
                                x:Name="itemThumbnail"
                                Padding="{StaticResource XSmallLeftTopRightBottomMargin}"
                                Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE8B9;"/>
                                    <TextBlock x:ConnectionId='10'
                                        Margin="{StaticResource XXSmallTopMargin}"
                                        HorizontalAlignment="Center"
                                                            
                                        Style="{ThemeResource BodyTextStyle}" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </controls:AdaptiveGridView.ItemTemplate>
                </controls:AdaptiveGridView>
            </Grid>
        </PivotItem>
        
        <PivotItem Header="Songs">
            <Grid x:ConnectionId='3' x:Name="SongsContentArea">
                <controls:AdaptiveGridView x:ConnectionId='4'
                                                                       
                                                    
                    StretchContentForSingleRow="False"
                    SelectionMode="None"
                    IsItemClickEnabled="True"
                    Padding="{StaticResource MediumLeftRightMargin}"
                    animations:Connected.ListItemElementName="itemThumbnail"
                    animations:Connected.ListItemKey="animationKeyCreateObjects"
                    DesiredWidth="180"
                    ItemHeight="160">
                    <controls:AdaptiveGridView.ItemTemplate>
                        <DataTemplate                                          >
                            <Grid x:ConnectionId='5'
                                x:Name="itemThumbnail"
                                Padding="{StaticResource XSmallLeftTopRightBottomMargin}"
                                Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE8B9;"/>
                                    <TextBlock x:ConnectionId='6'
                                        Margin="{StaticResource XXSmallTopMargin}"
                                        HorizontalAlignment="Center"
                                                            
                                        Style="{ThemeResource BodyTextStyle}" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </controls:AdaptiveGridView.ItemTemplate>
                </controls:AdaptiveGridView>
            </Grid>
        </PivotItem>
    </Pivot>
</Page>

