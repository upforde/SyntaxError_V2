<Page x:ConnectionId='1'
    x:Class="SyntaxError.V2.App.Views.AdminPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid x:ConnectionId='2' x:Name="ContentArea"
          Margin="{StaticResource MediumLeftRightMargin}"
          Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
        <Grid x:ConnectionId='3' x:Name="ControllPanel">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Image Grid.Row="0"
                   Grid.Column="1"
                   Grid.ColumnSpan="2"
                   Source="/Assets/SyntaxError_Logo.png"
                   Margin="0, 0, 0, 25"/>
            <Button x:ConnectionId='4' x:Name="SyntaxErrorFixButton"
                    Grid.Row="0" Grid.Column="3"
                    Visibility="Collapsed"
                                                       
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">Fix SyntaxError</Button>
            
            
            <StackPanel x:ConnectionId='5' x:Name="AudienceButtonArea"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0, 0, 0, 5"
                        HorizontalAlignment="Center">
                <Button x:ConnectionId='36' x:Name="AudienceButton"
                                                     
                        Margin="0, 0, 0, 5"
                        HorizontalAlignment="Center">Audience</Button>
                <StackPanel HorizontalAlignment="Center">
                    <controls:DropShadowPanel BlurRadius="8"
                                          ShadowOpacity="1"
                                          OffsetX="2"
                                          OffsetY="2"
                                          Color="#004FFC">
                    <TextBlock Text="Next game:"
                               Padding="5, 0, 0, 2"/>
                    </controls:DropShadowPanel>
                    <controls:DropShadowPanel BlurRadius="8"
                                                  ShadowOpacity="1"
                                                  OffsetX="2"
                                                  OffsetY="2"
                                                  Color="#004FFC">
                        <TextBlock x:ConnectionId='37' x:Name="AudienceNextGame"
                                                                                     
                                   Padding="10, 0, 0, 2"/>
                    </controls:DropShadowPanel>
                </StackPanel>
            </StackPanel>
            <Grid x:ConnectionId='6' x:Name="CrewButtonArea"
                  Grid.Row="1"
                  Grid.Column="1"
                  Margin="0, 0, 0, 5"
                  HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button x:ConnectionId='33' x:Name="CrewButton"
                                                 
                        Margin="0, 0, 0, 5"
                        HorizontalAlignment="Center">Crew</Button>
                <StackPanel Grid.Row="1"
                            HorizontalAlignment="Center">
                    <controls:DropShadowPanel BlurRadius="8"
                                              ShadowOpacity="1"
                                              OffsetX="2"
                                              OffsetY="2"
                                              Color="#BA00DF">
                        <TextBlock Text="Next game:"
                                   Padding="5, 0, 0, 2"/>
                    </controls:DropShadowPanel>
                    <controls:DropShadowPanel BlurRadius="8"
                                              ShadowOpacity="1"
                                              OffsetX="2"
                                              OffsetY="2"
                                              Color="#BA00DF">
                        <TextBlock x:ConnectionId='35' x:Name="CrewNextGame"
                                                                                          
                                   Padding="10, 0, 0, 2"/>
                    </controls:DropShadowPanel>
                </StackPanel>
                <StackPanel Grid.Row="2"
                            HorizontalAlignment="Center">
                    <controls:DropShadowPanel BlurRadius="8"
                                              ShadowOpacity="1"
                                              OffsetX="2"
                                              OffsetY="2"
                                              Color="#BA00DF">
                        <TextBlock Text="Next crew:"
                                   Padding="5, 0, 0, 2"/>
                    </controls:DropShadowPanel>
                    <controls:DropShadowPanel BlurRadius="8"
                                              ShadowOpacity="1"
                                              OffsetX="2"
                                              OffsetY="2"
                                              Color="#BA00DF">
                        <TextBlock x:ConnectionId='34' x:Name="CrewNextCrew"
                                                                                 
                                   Padding="10, 0, 0, 2"/>
                    </controls:DropShadowPanel>
                </StackPanel>
            </Grid>
            <Grid x:ConnectionId='7' x:Name="MultipleChoiceButtonArea"
                  Grid.Row="1"
                  Grid.Column="2"
                  Margin="0, 0, 0, 5"
                  HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button x:ConnectionId='30' x:Name="MultipleChoiceButton"
                                                     
                        Margin="0, 0, 0, 5"
                        HorizontalAlignment="Center">Multiple Choice</Button>
                <StackPanel Grid.Row="1">
                    <controls:DropShadowPanel BlurRadius="8"
                                              ShadowOpacity="1"
                                              OffsetX="2"
                                              OffsetY="2"
                                              Color="#FE0000">
                        <TextBlock Text="Question:"
                                   Padding="5, 0, 0, 2"/>
                    </controls:DropShadowPanel>
                    <controls:DropShadowPanel BlurRadius="8"
                                              ShadowOpacity="1"
                                              OffsetX="2"
                                              OffsetY="2"
                                              Color="#FE0000">
                        <TextBlock x:ConnectionId='32' x:Name="MultipleChoiceQuiestion"
                                                                                               
                                   Padding="10, 0, 0, 2"/>
                    </controls:DropShadowPanel>
                </StackPanel>
                <StackPanel Grid.Row="2">
                    <controls:DropShadowPanel BlurRadius="8"
                                              ShadowOpacity="1"
                                              OffsetX="2"
                                              OffsetY="2"
                                              Color="#FE0000">
                        <TextBlock Text="Answer:"
                                   Padding="5, 0, 0, 2"/>
                    </controls:DropShadowPanel>
                    <controls:DropShadowPanel BlurRadius="8"
                                              ShadowOpacity="1"
                                              OffsetX="2"
                                              OffsetY="2"
                                              Color="#FE0000">
                        <TextBlock x:ConnectionId='31' x:Name="MultipleChoiceAnswer"
                                                                                                
                                   Padding="10, 0, 0, 2"/>
                    </controls:DropShadowPanel>
                </StackPanel>
            </Grid>
            <StackPanel x:ConnectionId='8' x:Name="MusicButtonArea"
                        Grid.Row="1"
                        Grid.Column="3"
                        Margin="0, 0, 0, 5"
                        HorizontalAlignment="Center">
                <Button x:ConnectionId='28' x:Name="MusicButton"
                                                  
                        Margin="0, 0, 0, 5"
                        HorizontalAlignment="Center">Music</Button>
                <StackPanel HorizontalAlignment="Center">
                    <controls:DropShadowPanel BlurRadius="8"
                                              ShadowOpacity="1"
                                              OffsetX="2"
                                              OffsetY="2"
                                              Color="#F2FF00">
                        <TextBlock Text="Next song:"
                                   Padding="5, 0, 0, 2"/>
                    </controls:DropShadowPanel>
                    <controls:DropShadowPanel BlurRadius="8"
                                              ShadowOpacity="1"
                                              OffsetX="2"
                                              OffsetY="2"
                                              Color="#F2FF00">
                    <TextBlock x:ConnectionId='29' x:Name="MusicNextSong"
                                                                              
                               Padding="10, 0, 0, 2"/>
                </controls:DropShadowPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel x:ConnectionId='9' x:Name="QuizButtonArea"
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="0, 0, 0, 5"
                        HorizontalAlignment="Center">
                <Button x:ConnectionId='25' x:Name="QuizButton"
                                                 
                        Margin="0, 0, 0, 5"
                        HorizontalAlignment="Center">Quiz</Button>
                <StackPanel HorizontalAlignment="Center">
                    <controls:DropShadowPanel BlurRadius="8"
                                              ShadowOpacity="1"
                                              OffsetX="2"
                                              OffsetY="2"
                                              Color="#12A5D8">
                        <TextBlock Text="Question:"
                                   Padding="5, 0, 0, 2"/>
                    </controls:DropShadowPanel>
                    <controls:DropShadowPanel BlurRadius="8"
                                              ShadowOpacity="1"
                                              OffsetX="2"
                                              OffsetY="2"
                                              Color="#12A5D8">
                        <TextBlock x:ConnectionId='27' x:Name="QuizQuiestion"
                                                                                     
                                   Padding="10, 0, 0, 2"/>
                    </controls:DropShadowPanel>
                    <controls:DropShadowPanel BlurRadius="8"
                                              ShadowOpacity="1"
                                              OffsetX="2"
                                              OffsetY="2"
                                              Color="#12A5D8">
                        <TextBlock Text="Answer:"
                                   Padding="5, 0, 0, 2"/>
                    </controls:DropShadowPanel>
                    <controls:DropShadowPanel BlurRadius="8"
                                              ShadowOpacity="1"
                                              OffsetX="2"
                                              OffsetY="2"
                                              Color="#12A5D8">
                        <TextBlock x:ConnectionId='26' x:Name="QuizAnswer"
                                                                                      
                                   Padding="10, 0, 0, 2"/>
                    </controls:DropShadowPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel x:ConnectionId='10' x:Name="ScreenshotButtonArea"
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="0, 0, 0, 5"
                        HorizontalAlignment="Center">
                <Button x:ConnectionId='23' x:Name="ScreenshotButton"
                                                       
                        Margin="0, 0, 0, 5"
                        HorizontalAlignment="Center">Screenshot</Button>
                <StackPanel HorizontalAlignment="Center">
                    <controls:DropShadowPanel BlurRadius="8"
                                          ShadowOpacity="1"
                                          OffsetX="2"
                                          OffsetY="2"
                                          Color="#00C132">
                    <TextBlock Text="Next screenshot:"
                               Padding="5, 0, 0, 2"/>
                    </controls:DropShadowPanel>
                    <controls:DropShadowPanel BlurRadius="8"
                                                  ShadowOpacity="1"
                                                  OffsetX="2"
                                                  OffsetY="2"
                                                  Color="#00C132">
                        <TextBlock x:ConnectionId='24' x:Name="ScreenshotNextScreenshot"
                                                                                        
                                   Padding="10, 0, 0, 2"/>
                    </controls:DropShadowPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel x:ConnectionId='11' x:Name="SilhouetteButtonArea"
                        Grid.Row="2"
                        Grid.Column="2"
                        Margin="0, 0, 0, 5"
                        HorizontalAlignment="Center">
                <Button x:ConnectionId='21' x:Name="SilhouetteButton"
                                                       
                        Margin="0, 0, 0, 5"
                        HorizontalAlignment="Center">Silhouette</Button>
                <StackPanel HorizontalAlignment="Center">
                    <controls:DropShadowPanel BlurRadius="8"
                                              ShadowOpacity="1"
                                              OffsetX="2"
                                              OffsetY="2"
                                              Color="#00FFFB">
                        <TextBlock Text="Next silhouette:"
                                   Padding="5, 0, 0, 2"/>
                    </controls:DropShadowPanel>
                    <controls:DropShadowPanel BlurRadius="8"
                                              ShadowOpacity="1"
                                              OffsetX="2"
                                              OffsetY="2"
                                              Color="#00FFFB">
                    <TextBlock x:ConnectionId='22' x:Name="SilhouetteNextSilhouette"
                                                                                    
                               Padding="10, 0, 0, 2"/>
                </controls:DropShadowPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel x:ConnectionId='12' x:Name="SologameButtonArea"
                        Grid.Row="2"
                        Grid.Column="3"
                        Margin="0, 0, 0, 5"
                        HorizontalAlignment="Center">
                <Button x:ConnectionId='19' x:Name="SologameButton"                              
                        Margin="0, 0, 0, 5"
                        HorizontalAlignment="Center">Sologame</Button>
                <StackPanel HorizontalAlignment="Center">
                    <controls:DropShadowPanel BlurRadius="8"
                                              ShadowOpacity="1"
                                              OffsetX="2"
                                              OffsetY="2"
                                              Color="#FE0000">
                        <TextBlock Text="Next game:"
                                   Padding="5, 0, 0, 2"/>
                    </controls:DropShadowPanel>
                    <controls:DropShadowPanel BlurRadius="8"
                                              ShadowOpacity="1"
                                              OffsetX="2"
                                              OffsetY="2"
                                              Color="#FE0000">
                    <TextBlock x:ConnectionId='20' x:Name="SologameNextGame"
                                                                                 
                               Padding="10, 0, 0, 2"/>
                </controls:DropShadowPanel>
                </StackPanel>
            </StackPanel>
            
            <Grid x:ConnectionId='13' x:Name="ActionButtonArea"
                  Grid.ColumnSpan="4"
                  Grid.Row="3"
                  HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                
                <Button x:ConnectionId='14' x:Name="PlayButton"
                        Grid.Column="0"
                                                 
                        IsEnabled="False">
                    Play
                </Button>
                <Button x:ConnectionId='15' x:Name="DeselectButton"
                        Grid.Column="1"
                                                     
                        IsEnabled="False">
                    Deselect
                </Button>
                <Button x:ConnectionId='16' x:Name="AnswerButton"
                        Grid.Column="2"
                                                   
                        IsEnabled="False">
                    Answer
                </Button>
                <Button x:ConnectionId='17' x:Name="DoneButton"
                        Grid.Column="3"
                                                 
                        IsEnabled="False">
                    Done
                </Button>
                <Button x:ConnectionId='18' x:Name="RandomButton"
                        Grid.Column="4"
                                                   
                        IsEnabled="True">Random</Button>
            </Grid>
        </Grid>
    </Grid>
</Page>

