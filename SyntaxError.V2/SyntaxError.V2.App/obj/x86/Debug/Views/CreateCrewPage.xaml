<Page x:ConnectionId='1'
    x:Class="SyntaxError.V2.App.Views.CreateCrewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:challengeobjects="using:SyntaxError.V2.Modell.ChallengeObjects"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' x:Name="CrewContentArea">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Padding="15, 15, 15, 0">
            <TextBlock Text="Crew Members" Style="{ThemeResource TitleTextBlockStyle}"/>
        </Grid>

        <Grid HorizontalAlignment="Stretch" Grid.Row="1" Padding="15, 0, 15, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
                    
            <AutoSuggestBox x:ConnectionId='13' PlaceholderText="Search"
                            Grid.Column="0"
                                                                    
                                                                          
                            QueryIcon="Find"
                            Width="300"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"/>
                    
            <AppBarButton x:ConnectionId='14' Grid.Column="1"
                          Icon="Add"
                          Label="New Crew Member"
                                                              
                          HorizontalAlignment="Right"/>
        </Grid>
                
        <controls:AdaptiveGridView x:ConnectionId='3' x:Name="CrewGrid"
                                                                  
                                   Grid.Row="2"
                                   StretchContentForSingleRow="False"
                                   SelectionMode="None"
                                   IsItemClickEnabled="True"
                                                                   
                                   Padding="{StaticResource MediumLeftRightMargin}"
                                   DesiredWidth="180"
                                   ItemHeight="160"
                                   animations:ReorderGridAnimation.Duration="300">
            <controls:AdaptiveGridView.ItemTemplate>
                <DataTemplate                                         >
                    <Grid x:ConnectionId='11' x:Name="connectedElement" 
                            Padding="{StaticResource XSmallLeftTopRightBottomMargin}"
                            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE77B;"/>
                            <TextBlock x:ConnectionId='12'
                                Margin="{StaticResource XXSmallTopMargin}"
                                HorizontalAlignment="Center"
                                                       
                                Style="{ThemeResource BodyTextStyle}" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </controls:AdaptiveGridView.ItemTemplate>
        </controls:AdaptiveGridView>

        <Grid x:ConnectionId='4' x:Name="SmokeGrid" HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Visibility="Collapsed"
              Grid.Row="2"
              Padding="15">
            <Grid.Background>
                <SolidColorBrush Color="{ThemeResource SystemChromeAltHighColor}" Opacity="0.8" />
            </Grid.Background>
                    
            <Grid HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="500" Height="300"
                    BorderThickness="1"
                    BorderBrush="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">

                <StackPanel HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid x:ConnectionId='7' Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Height="300" Width="200"
                                    Background="{ThemeResource ButtonPointerOverBackgroundThemeBrush}"
                                                              >
                            <Image x:ConnectionId='10' x:Name="crewImage" Visibility="Collapsed"
                                   Height="Auto"
                                   Width="Auto"/>
                            <TextBlock Text="&#xE710;" FontSize="50"
                                        Padding="0, 125, 0, 0"
                                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                                        HorizontalTextAlignment="Center"/>
                        </Grid>
                        <TextBox x:ConnectionId='8' x:Name="SmokeGridText" Grid.Column="1"
                                 FontSize="35"
                                 Margin="12" VerticalAlignment="Center"
                                 HorizontalAlignment="Left" />
                        <Button x:ConnectionId='9' Grid.Column="1"
                                                        
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right"
                                Height="40"
                                Width="40"
                                Margin="5" 
                                ToolTipService.ToolTip="Close"
                                AutomationProperties.Name="Close">
                            <Button.Content>
                                <SymbolIcon Symbol="Clear" />
                            </Button.Content>
                        </Button>
                    </Grid>
                </StackPanel>
                        
                <StackPanel HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Orientation="Horizontal">
                    <AppBarButton x:ConnectionId='5' Label="Save"
                                    Icon="Accept"
                                                            />
                    <AppBarButton x:ConnectionId='6' Label="Cancel"
                                    Icon="Cancel"
                                                            />
                </StackPanel>
            </Grid>
                    
        </Grid>
    </Grid>
    
</Page>

