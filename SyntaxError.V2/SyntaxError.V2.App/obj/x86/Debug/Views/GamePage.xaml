<Page
    x:Class="SyntaxError.V2.App.Views.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:media="using:Microsoft.Toolkit.Uwp.UI.Media"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d"
    Background="#111111">

    <Page.Resources>
        <!--PlayButtonArea-->
        <Storyboard x:ConnectionId='2' x:Name="PlayButtonAreaOpacityDown">
            <DoubleAnimation
                Storyboard.TargetName="PlayButtonArea"
                Storyboard.TargetProperty="Opacity"
                From="1.0" To="0.0" Duration="0:0:1"/>
        </Storyboard>
        <Storyboard x:ConnectionId='3' x:Name="PlayButtonAreaOpacityUp">
            <DoubleAnimation
                Storyboard.TargetName="PlayButtonArea"
                Storyboard.TargetProperty="Opacity"
                From="0.0" To="1.0" Duration="0:0:1"/>
        </Storyboard>
        <!--Audience-->
        <Storyboard x:ConnectionId='4' x:Name="AudienceOpacityDown">
            <DoubleAnimation
                Storyboard.TargetName="AudienceChallengeArea"
                Storyboard.TargetProperty="Opacity"
                From="1.0" To="0.0" Duration="0:0:1"/>
        </Storyboard>
        <Storyboard x:ConnectionId='5' x:Name="AudienceOpacityUp">
            <DoubleAnimation
                Storyboard.TargetName="AudienceChallengeArea"
                Storyboard.TargetProperty="Opacity"
                From="0.0" To="1.0" Duration="0:0:1"/>
        </Storyboard>
        <!--Crew-->
        <Storyboard x:ConnectionId='6' x:Name="CrewOpacityDown">
            <DoubleAnimation
                Storyboard.TargetName="CrewChallengeArea"
                Storyboard.TargetProperty="Opacity"
                From="1.0" To="0.0" Duration="0:0:1"/>
        </Storyboard>
        <Storyboard x:ConnectionId='7' x:Name="CrewOpacityUp">
            <DoubleAnimation
                Storyboard.TargetName="CrewChallengeArea"
                Storyboard.TargetProperty="Opacity"
                From="0.0" To="1.0" Duration="0:0:1"/>
        </Storyboard>
        <!--MultipleChoice-->
        <Storyboard x:ConnectionId='8' x:Name="MultipleChoiceOpacityDown">
            <DoubleAnimation
                Storyboard.TargetName="MultipleChoiceChallengeArea"
                Storyboard.TargetProperty="Opacity"
                From="1.0" To="0.0" Duration="0:0:1"/>
        </Storyboard>
        <Storyboard x:ConnectionId='9' x:Name="MultipleChoiceOpacityUp">
            <DoubleAnimation
                Storyboard.TargetName="MultipleChoiceChallengeArea"
                Storyboard.TargetProperty="Opacity"
                From="0.0" To="1.0" Duration="0:0:1"/>
        </Storyboard>
        <!--Music-->
        <Storyboard x:ConnectionId='10' x:Name="MusicOpacityDown">
            <DoubleAnimation
                Storyboard.TargetName="MusicChallengeArea"
                Storyboard.TargetProperty="Opacity"
                From="1.0" To="0.0" Duration="0:0:1"/>
        </Storyboard>
        <Storyboard x:ConnectionId='11' x:Name="MusicOpacityUp">
            <DoubleAnimation
                Storyboard.TargetName="MusicChallengeArea"
                Storyboard.TargetProperty="Opacity"
                From="0.0" To="1.0" Duration="0:0:1"/>
        </Storyboard>
        <!--Quiz-->
        <Storyboard x:ConnectionId='12' x:Name="QuizOpacityDown">
            <DoubleAnimation
                Storyboard.TargetName="QuizChallengeArea"
                Storyboard.TargetProperty="Opacity"
                From="1.0" To="0.0" Duration="0:0:1"/>
        </Storyboard>
        <Storyboard x:ConnectionId='13' x:Name="QuizOpacityUp">
            <DoubleAnimation
                Storyboard.TargetName="QuizChallengeArea"
                Storyboard.TargetProperty="Opacity"
                From="0.0" To="1.0" Duration="0:0:1"/>
        </Storyboard>
        <!--Screenshot-->
        <Storyboard x:ConnectionId='14' x:Name="ScreenshotOpacityDown">
            <DoubleAnimation
                Storyboard.TargetName="ScreenshotChallengeArea"
                Storyboard.TargetProperty="Opacity"
                From="1.0" To="0.0" Duration="0:0:1"/>
        </Storyboard>
        <Storyboard x:ConnectionId='15' x:Name="ScreenshotOpacityUp">
            <DoubleAnimation
                Storyboard.TargetName="ScreenshotChallengeArea"
                Storyboard.TargetProperty="Opacity"
                From="0.0" To="1.0" Duration="0:0:1"/>
        </Storyboard>
        <!--Silhouette-->
        <Storyboard x:ConnectionId='16' x:Name="SilhouetteOpacityDown">
            <DoubleAnimation
                Storyboard.TargetName="SilhouetteChallengeArea"
                Storyboard.TargetProperty="Opacity"
                From="1.0" To="0.0" Duration="0:0:1"/>
        </Storyboard>
        <Storyboard x:ConnectionId='17' x:Name="SilhouetteOpacityUp">
            <DoubleAnimation
                Storyboard.TargetName="SilhouetteChallengeArea"
                Storyboard.TargetProperty="Opacity"
                From="0.0" To="1.0" Duration="0:0:1"/>
        </Storyboard>
        <!--Sologame-->
        <Storyboard x:ConnectionId='18' x:Name="SologameOpacityDown">
            <DoubleAnimation
                Storyboard.TargetName="SologameChallengeArea"
                Storyboard.TargetProperty="Opacity"
                From="1.0" To="0.0" Duration="0:0:1"/>
        </Storyboard>
        <Storyboard x:ConnectionId='19' x:Name="SologameOpacityUp">
            <DoubleAnimation
                Storyboard.TargetName="SologameChallengeArea"
                Storyboard.TargetProperty="Opacity"
                From="0.0" To="1.0" Duration="0:0:1"/>
        </Storyboard>
        <!--ImgMove-->
        <Storyboard x:ConnectionId='20' x:Name="ImgMove">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)"
                             Duration="0:0:20"
                             RepeatBehavior="Forever"
                             From="0"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)"
                             Duration="0:0:20"
                             RepeatBehavior="Forever"
                             To="0"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)"
                             Duration="0:0:20"
                             RepeatBehavior="Forever"
                             To="0"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)"
                             Duration="0:0:20"
                             RepeatBehavior="Forever"
                             From="0"/>
        </Storyboard>
        <!--SyntaxError-->
        <Storyboard x:ConnectionId='21' x:Name="SyntaxErrorLogo">
            <DoubleAnimation Storyboard.TargetName="SyntaxErrorLogoImg"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" />
            <DoubleAnimation Storyboard.TargetName="SyntaxErrorLogoImg"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" />
        </Storyboard>
        <Storyboard x:ConnectionId='22' x:Name="SyntaxErrorAudience">
            <DoubleAnimation Storyboard.TargetName="audienceChallenge"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" />
            <DoubleAnimation Storyboard.TargetName="audienceChallenge"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" />
        </Storyboard>
        <Storyboard x:ConnectionId='23' x:Name="SyntaxErrorCrew">
            <DoubleAnimation Storyboard.TargetName="crewChallenge"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" />
            <DoubleAnimation Storyboard.TargetName="crewChallenge"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" />
        </Storyboard>
        <Storyboard x:ConnectionId='24' x:Name="SyntaxErrorMultipleChoice">
            <DoubleAnimation Storyboard.TargetName="multipleChoiceChallenge"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" />
            <DoubleAnimation Storyboard.TargetName="multipleChoiceChallenge"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" />
        </Storyboard>
        <Storyboard x:ConnectionId='25' x:Name="SyntaxErrorMusic">
            <DoubleAnimation Storyboard.TargetName="musicChallenge"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" />
            <DoubleAnimation Storyboard.TargetName="musicChallenge"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" />
        </Storyboard>
        <Storyboard x:ConnectionId='26' x:Name="SyntaxErrorQuiz">
            <DoubleAnimation Storyboard.TargetName="quizChallenge"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" />
            <DoubleAnimation Storyboard.TargetName="quizChallenge"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" />
        </Storyboard>
        <Storyboard x:ConnectionId='27' x:Name="SyntaxErrorScreenshot">
            <DoubleAnimation Storyboard.TargetName="screenshotChallenge"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" />
            <DoubleAnimation Storyboard.TargetName="screenshotChallenge"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" />
        </Storyboard>
        <Storyboard x:ConnectionId='28' x:Name="SyntaxErrorSilhouette">
            <DoubleAnimation Storyboard.TargetName="silhouetteChallenge"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" />
            <DoubleAnimation Storyboard.TargetName="silhouetteChallenge"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" />
        </Storyboard>
        <Storyboard x:ConnectionId='29' x:Name="SyntaxErrorSologame">
            <DoubleAnimation Storyboard.TargetName="sologameChallenge"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" />
            <DoubleAnimation Storyboard.TargetName="sologameChallenge"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" />
        </Storyboard>
    </Page.Resources>

    <Grid x:ConnectionId='30' x:Name="ContentArea"
          Margin="{StaticResource MediumLeftRightMargin}">
        <Grid x:ConnectionId='31' x:Name="PlayButtonArea"
              Background="#111111">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            
            <Image x:ConnectionId='105' x:Name="SyntaxErrorLogoImg"
                   Grid.Row="0"
                   Stretch="Uniform"
                   Source="/Assets/SyntaxError_Logo.png">
                <Image.RenderTransform>
                    <CompositeTransform />
                </Image.RenderTransform>
            </Image>
            <Grid Grid.Row="1"
                  HorizontalAlignment="Center"
                  Margin="0, 0, 0, 20">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    
                    <controls:DropShadowPanel x:ConnectionId='115' x:Name="MultipleChoiceGlow"
                                              Grid.Column="0"
                                              OffsetX="5"
                                              ShadowOpacity="0"
                                              BlurRadius="0"
                                              Color="#FE0000"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center">
                        <Image x:ConnectionId='128' x:Name="multipleChoiceChallenge"
                               Source="/Assets/multiply_choice_challenge_thumbnail.jpg"
                               Margin="5, 0, 5, 5">
                            <animations:Implicit.ShowAnimations>
                                <animations:TranslationAnimation Duration="0:0:1" From="0, -200, 0" To="0" ></animations:TranslationAnimation>
                                <animations:OpacityAnimation Duration="0:0:1" From="0" To="1.0"></animations:OpacityAnimation>
                            </animations:Implicit.ShowAnimations>
                            <Image.RenderTransform>
                                <CompositeTransform x:ConnectionId='129' x:Name="MultipleChoiceChallengeHighLight" />
                            </Image.RenderTransform>
                        </Image>
                    </controls:DropShadowPanel>
                    <controls:DropShadowPanel x:ConnectionId='116' x:Name="MusicGlow"
                                              Grid.Column="1"
                                              OffsetX="5"
                                              ShadowOpacity="0"
                                              BlurRadius="0"
                                              Color="#F2FF00"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center">
                        <Image x:ConnectionId='126' x:Name="musicChallenge"
                               Source="/Assets/music_challenge_thumbnail.jpg"
                               Margin="5, 0, 10, 5">
                            <animations:Implicit.ShowAnimations>
                                <animations:TranslationAnimation Duration="0:0:1" From="0, -200, 0" To="0" ></animations:TranslationAnimation>
                                <animations:OpacityAnimation Duration="0:0:1" From="0" To="1.0"></animations:OpacityAnimation>
                            </animations:Implicit.ShowAnimations>
                            <Image.RenderTransform>
                                <CompositeTransform x:ConnectionId='127' x:Name="MusicChallengeHighLight" />
                            </Image.RenderTransform>
                        </Image>
                    </controls:DropShadowPanel>
                    <controls:DropShadowPanel x:ConnectionId='117' x:Name="QuizGlow"
                                                  Grid.Column="2"
                                                  OffsetX="10"
                                                  OffsetY="5"
                                                  ShadowOpacity="0"
                                                  BlurRadius="0"
                                                  Color="#12A5D8"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center">
                        
                            <Image x:ConnectionId='124' x:Name="quizChallenge"
                                    Source="/Assets/quiz_challenge_thumbnail.jpg"
                                    Margin="10, 5, 5, 0">
                                <animations:Implicit.ShowAnimations>
                                    <animations:TranslationAnimation Duration="0:0:1" From="0, -200, 0" To="0" ></animations:TranslationAnimation>
                                    <animations:OpacityAnimation Duration="0:0:1" From="0" To="1.0"></animations:OpacityAnimation>
                                </animations:Implicit.ShowAnimations>
                                <Image.RenderTransform>
                                    <CompositeTransform x:ConnectionId='125' x:Name="QuizChallengeHighLight" />
                                </Image.RenderTransform>
                            </Image>
                        </controls:DropShadowPanel>
                    <controls:DropShadowPanel x:ConnectionId='118' x:Name="ScreenshotGlow"
                                              Grid.Column="3"
                                              OffsetX="5"
                                              OffsetY="5"
                                              ShadowOpacity="0"
                                              BlurRadius="0"
                                              Color="#00C132"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center">
                        <Image x:ConnectionId='122' x:Name="screenshotChallenge"
                               Source="/Assets/screenshot_challenge_thumbnail.jpg"
                               Margin="5, 5, 5, 0">
                            <animations:Implicit.ShowAnimations>
                                <animations:TranslationAnimation Duration="0:0:1" From="0, -200, 0" To="0" ></animations:TranslationAnimation>
                                <animations:OpacityAnimation Duration="0:0:1" From="0" To="1.0"></animations:OpacityAnimation>
                            </animations:Implicit.ShowAnimations>
                            <Image.RenderTransform>
                                <CompositeTransform x:ConnectionId='123' x:Name="ScreenshotChallengeHighLight" />
                            </Image.RenderTransform>
                        </Image>
                    </controls:DropShadowPanel>
                    <controls:DropShadowPanel x:ConnectionId='119' x:Name="SilhouetteGlow"
                                              Grid.Column="4"
                                              OffsetX="5"
                                              OffsetY="5"
                                              ShadowOpacity="0"
                                              BlurRadius="0"
                                              Color="#00FFFB"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center">
                        <Image x:ConnectionId='120' x:Name="silhouetteChallenge"
                               Source="/Assets/silhouette_challenge_thumbnail.jpg"
                               Margin="5, 5, 5, 0">
                            <animations:Implicit.ShowAnimations>
                                <animations:TranslationAnimation Duration="0:0:1" From="0, -200, 0" To="0" ></animations:TranslationAnimation>
                                <animations:OpacityAnimation Duration="0:0:1" From="0" To="1.0"></animations:OpacityAnimation>
                            </animations:Implicit.ShowAnimations>
                            <Image.RenderTransform>
                                <CompositeTransform x:ConnectionId='121' x:Name="SilhouetteChallengeHighLight" />
                            </Image.RenderTransform>
                        </Image>
                    </controls:DropShadowPanel>
                </Grid>
                <Grid Grid.Row="1" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    
                    <controls:DropShadowPanel x:ConnectionId='106' x:Name="AudienceGlow"
                                              Grid.Column="0"
                                              OffsetX="10"
                                              ShadowOpacity="0"
                                              BlurRadius="0"
                                              Color="#004FFC"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center">
                        <Image x:ConnectionId='113' x:Name="audienceChallenge"
                               Source="/Assets/audience_challenge_thumbnail.jpg"
                               Margin="10, 0, 5, 5"
                               animations:Connected.Key="audience">
                            <animations:Implicit.ShowAnimations>
                                <animations:TranslationAnimation Duration="0:0:1" From="0, -200, 0" To="0" ></animations:TranslationAnimation>
                                <animations:OpacityAnimation Duration="0:0:1" From="0" To="1.0"></animations:OpacityAnimation>
                            </animations:Implicit.ShowAnimations>
                            <Image.RenderTransform>
                                <CompositeTransform x:ConnectionId='114' x:Name="AudienceHighLight" />
                            </Image.RenderTransform>
                        </Image>
                    </controls:DropShadowPanel>
                    <controls:DropShadowPanel x:ConnectionId='107' x:Name="CrewGlow"
                                              Grid.Column="1"
                                              OffsetX="5"
                                              ShadowOpacity="0"
                                              BlurRadius="0"
                                              Color="#BA00DF"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center">
                        <Image x:ConnectionId='111' x:Name="crewChallenge"
                               Source="/Assets/crew_challenge_thumbnail.jpg"
                               Margin="5, 0, 5, 5">
                            <animations:Implicit.ShowAnimations>
                                <animations:TranslationAnimation Duration="0:0:1" From="0, -200, 0" To="0" ></animations:TranslationAnimation>
                                <animations:OpacityAnimation Duration="0:0:1" From="0" To="1.0"></animations:OpacityAnimation>
                            </animations:Implicit.ShowAnimations>
                            <Image.RenderTransform>
                                <CompositeTransform x:ConnectionId='112' x:Name="CrewChallengeHighLight" />
                            </Image.RenderTransform>
                        </Image>
                    </controls:DropShadowPanel>
                    <controls:DropShadowPanel x:ConnectionId='108' x:Name="SologameGlow"
                                              Grid.Column="2"
                                              OffsetX="5"
                                              OffsetY="5"
                                              ShadowOpacity="0"
                                              BlurRadius="0"
                                              Color="#FE0000"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center">
                        <Image x:ConnectionId='109' x:Name="sologameChallenge"
                               Source="/Assets/sologame_challenge_thumbnail.jpg"
                               Margin="5, 5, 10, 0">
                            <animations:Implicit.ShowAnimations>
                                <animations:TranslationAnimation Duration="0:0:1" From="0, -200, 0" To="0" ></animations:TranslationAnimation>
                                <animations:OpacityAnimation Duration="0:0:1" From="0" To="1.0"></animations:OpacityAnimation>
                            </animations:Implicit.ShowAnimations>
                            <Image.RenderTransform>
                                <CompositeTransform x:ConnectionId='110' x:Name="SologameChallengeHighLight" />
                            </Image.RenderTransform>
                        </Image>
                    </controls:DropShadowPanel>
                </Grid>
            </Grid>
        </Grid>
        <Grid x:ConnectionId='32' x:Name="AudienceChallengeArea"
              Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>
            
            <Image x:ConnectionId='98' x:Name="sideAudienceTopImg"
                   Grid.Row="0"
                   MaxHeight="150"
                   MaxWidth="1920"
                   Source="/Assets/AudienceBorder.png"
                   Margin="0,-5,0,0"
                   VerticalAlignment="Top"
                   Opacity="0.2">
                <Image.RenderTransform>
                    <CompositeTransform/>
                </Image.RenderTransform>
            </Image>
            <Image x:ConnectionId='99' x:Name="frontAudienceTopImg"
                   Grid.Row="0"
                   MaxHeight="150"
                   MaxWidth="1920"
                   Source="/Assets/AudienceBorder.png"
                   Margin="0,-5,0,0"
                   VerticalAlignment="Top"
                   Opacity="0.2">
                <Image.RenderTransform>
                    <CompositeTransform/>
                </Image.RenderTransform>
            </Image>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition MaxHeight="300" />
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                
                <Image Grid.Row="0" Grid.ColumnSpan="2"
                       Source="/Assets/Audience_Logo.png"
                       VerticalAlignment="Top"/>
                <Image x:ConnectionId='102' x:Name="AudienceGameImg"
                       Grid.Row="1" Grid.Column="0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"/>
                <StackPanel Grid.Row="1" Grid.Column="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left">
                    <controls:DropShadowPanel OffsetX="5"
                                              OffsetY="5"
                                              Color="#004FFC"
                                              Margin="15, 0, 0, 15">
                        <TextBlock Text="The game:"
                                   Style="{StaticResource TitleTextBlockStyle}"/>
                    </controls:DropShadowPanel>
                    <controls:DropShadowPanel OffsetX="5"
                                              OffsetY="5"
                                              Color="#004FFC"
                                              Margin="30, 0, 0, 15">
                    <TextBlock x:ConnectionId='104' x:Name="AudienceGameText"
                               Style="{StaticResource SubheaderTextBlockStyle}"/>
                    </controls:DropShadowPanel>
                    <controls:DropShadowPanel OffsetX="5"
                                              OffsetY="5"
                                              Color="#004FFC"
                                              Margin="15, 0, 0, 15">
                        <TextBlock Text="The task:"
                                   Style="{StaticResource TitleTextBlockStyle}"/>
                    </controls:DropShadowPanel>
                    <controls:DropShadowPanel OffsetX="5"
                                              OffsetY="5"
                                              Color="#004FFC"
                                              Margin="30, 0, 0, 15">
                        <TextBlock x:ConnectionId='103' x:Name="AudienceTaskText"
                                   Style="{StaticResource SubheaderTextBlockStyle}"/>
                    </controls:DropShadowPanel>
                </StackPanel>
            </Grid>

            <Image x:ConnectionId='100' x:Name="sideAudienceBottomImg"
                   Grid.Row="2"
                   MaxHeight="150"
                   MaxWidth="1920"
                   Source="/Assets/AudienceBorder.png"
                   Margin="0, 0, 0, -5"
                   VerticalAlignment="Bottom"
                   Opacity="0.2">
                <Image.RenderTransform>
                    <CompositeTransform/>
                </Image.RenderTransform>
            </Image>
            <Image x:ConnectionId='101' x:Name="frontAudienceBottomImg"
                   Grid.Row="2"
                   MaxHeight="150"
                   MaxWidth="1920"
                   Source="/Assets/AudienceBorder.png"
                   Margin="0, 0, 0, -5"
                   VerticalAlignment="Bottom"
                   Opacity="0.2">
                <Image.RenderTransform>
                    <CompositeTransform/>
                </Image.RenderTransform>
            </Image>
        </Grid>
        <Grid x:ConnectionId='33' x:Name="CrewChallengeArea"
              Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="*"/>
