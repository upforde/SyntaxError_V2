            </Grid.RowDefinitions>
            
            <Image x:ConnectionId='90' x:Name="sideCrewTopImg"
                   Grid.Row="0"
                   MaxHeight="150"
                   MaxWidth="1920"
                   Source="/Assets/CrewBorder.png"
                   Margin="0,-5,0,0"
                   VerticalAlignment="Top"
                   Opacity="0.2">
                <Image.RenderTransform>
                    <CompositeTransform/>
                </Image.RenderTransform>
            </Image>
            <Image x:ConnectionId='91' x:Name="frontCrewTopImg"
                   Grid.Row="0"
                   MaxHeight="150"
                   MaxWidth="1920"
                   Source="/Assets/CrewBorder.png"
                   Margin="0,-5,0,0"
                   VerticalAlignment="Top"
                   Opacity="0.2">
                <Image.RenderTransform>
                    <CompositeTransform/>
                </Image.RenderTransform>
            </Image>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition MaxHeight="300" />
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                
                <Image Grid.Row="0" Grid.Column="0"
                       Source="/Assets/Crew_Logo.png"
                       VerticalAlignment="Top"
                       Margin="0, 0, 0, 25"/>
                <Grid Grid.Row="1" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Visibility="Collapsed"
                                HorizontalAlignment="Right">
                        <controls:DropShadowPanel OffsetX="5"
                                                  OffsetY="5"
                                                  Color="#BA00DF">
                            <TextBlock Text="The challenger" Style="{StaticResource TitleTextBlockStyle}" />
                        </controls:DropShadowPanel>
                        <controls:DropShadowPanel OffsetX="5"
                                                  OffsetY="5"
                                                  Color="#BA00DF">
                            <TextBlock x:ConnectionId='97' x:Name="CrewCrewMember" Style="{StaticResource SubheaderTextBlockStyle}" />
                        </controls:DropShadowPanel>
                    </StackPanel>
                    <StackPanel Grid.ColumnSpan="2"
                                HorizontalAlignment="Right"
                                Margin="0, 0, 25, 0">
                        <controls:DropShadowPanel OffsetX="5"
                                                  OffsetY="5"
                                                  Color="#BA00DF">
                            <TextBlock Text="The game:" Style="{StaticResource TitleTextBlockStyle}" />
                        </controls:DropShadowPanel>
