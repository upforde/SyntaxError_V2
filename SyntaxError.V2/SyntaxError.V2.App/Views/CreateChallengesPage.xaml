                                            <SymbolIcon Symbol="Clear" />
                                        </Button.Content>
                                    </Button>
                                    <Grid Grid.Row="1"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"
                                          Margin="50, 0, 50, 0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Grid.RowSpan="3"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="200"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Grid Grid.Column="0"
                                                      VerticalAlignment="Center"
                                                      Height="200" Width="200"
                                                      Background="{ThemeResource ButtonPointerOverBackgroundThemeBrush}"
                                                      Tapped="StackPanel_Tapped">
                                                    <controls:ImageEx IsCacheEnabled="False"
                                                                      Height="200" Width="200"
                                                                      PlaceholderSource="/assets/LockScreenLogo.scale-200.png"/>
                                                    <TextBlock Text="&#xE710;" FontSize="50"
                                                                Padding="0, 75, 0, 0"
                                                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                                                HorizontalTextAlignment="Center"/>
                                                </Grid>
                                                <TextBox Grid.Column="1"
                                                         FontSize="35"
                                                         Margin="12" VerticalAlignment="Center"
                                                         HorizontalAlignment="Left" />
                                                <Button Grid.Column="1"
                                                        Click="BackButton_Click"
                                                        VerticalAlignment="Top"
                                                        HorizontalAlignment="Right"
                                                        Height="40"
                                                        Width="40"
                                                        Margin="5" 
                                                        ToolTipService.ToolTip="Close"
                                                        AutomationProperties.Name="Close">
                                                    <Button.Content>
                                                        <SymbolIcon Symbol="Clear" />
                                                    </Button.Content>
                                                </Button>
                                            </Grid>
                                        </StackPanel>

                                        <ComboBox Grid.Column="1" Grid.Row="0" ItemsSource="{x:Bind ViewModel.Games}"
                                                  Margin="25,0,0,0" VerticalAlignment="Center"
                                                  Width="200" SelectionChanged="ComboBox_SelectionChanged">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate x:DataType="mediaObjects:Game">
                                                    <StackPanel>
                                                        <TextBlock Text="{x:Bind Name}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <TextBox Grid.Column="1" Grid.Row="1"
                                                 Margin="25,0,0,0" VerticalAlignment="Center"
                                                 MinWidth="250" Width="Auto" Height="40"/>
                                    </Grid>
                                </Grid>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        Orientation="Horizontal">
                                <AppBarButton Label="Save"
                                              Icon="Accept"
                                              Click="SaveButton_Click"/>
                                <AppBarButton Label="Cancel"
                                              Icon="Cancel"
                                              Click="BackButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                    <TextBlock x:Name="EmptySologameChallenges"
                               Grid.Row="1"
                               Text="No items found"
                               Visibility="Collapsed"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Style="{ThemeResource BodyTextBlockStyle}"
                               Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                </Grid>
            </PivotItem>
        </Pivot>
        <!--Network failure-->
        <StackPanel x:Name="RefreshChallengePage"
                    Grid.ColumnSpan="2"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="Collapsed"
                    BorderThickness="5"
                    BorderBrush="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                    Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            <TextBlock Text="Uh oh, bucko! Something's gone wrong!"
                       Style="{ThemeResource SubtitleTextBlockStyle}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Padding="5"
                       Margin="5"/>
            <TextBlock Text="Make sure to have a proper connection to the internet and have access to the database before smashing that refresh button fam."
                       Style="{ThemeResource DetailBodyBaseMediumStyle}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       MaxWidth="450"
                       Padding="5"
                       Margin="5"/>
            <AppBarButton Label="Refresh"
                          Icon="Refresh"
                          Click="RefreshChallengePage_Click"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Padding="5"
                          Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
