<Page
    x:Class="SyntaxError.V2.App.Views.CreateChallengesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:challenges="using:SyntaxError.V2.Modell.Challenges"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">

    <Grid 
        x:Name="ContentArea"
        Margin="{StaticResource SmallLeftRightMargin}">
        <Pivot x:Name="ChallengeList"
              Grid.Column="1"
              Grid.RowSpan="3"
              BorderThickness="5, 0, 0, 0"
              BorderBrush="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <PivotItem Header="Audience challenges">
                <Grid Padding="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <AutoSuggestBox IsEnabled="False" PlaceholderText="Search" 
                                            TextChanged="AutoSuggestBox_TextChanged"
                                            QuerySubmitted="AutoSuggestBox_QuerySubmitted"
                                            QueryIcon="Find"
                                            Width="300"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"/>
                            <AppBarButton Label="Selection mode"
                                          Click="AppBarButton_SelectionMode_Click">
                                <AppBarButton.Icon>
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                              Glyph="&#xE762;"/>
                                </AppBarButton.Icon>
                            </AppBarButton>
                            <AppBarButton Label="Delete Selected"
                                          Icon="Delete"
                                          Visibility="Collapsed"
                                          Click="AppBarButton_DeleteSelected_Click"/>
                        </StackPanel>
                        
                        <AppBarButton Grid.Column="1"
                                  Icon="Add"
                                  Label="New Challenge"
                                  Click="AddNewChallengeButton_Click"
                                  HorizontalAlignment="Right"/>
                    </Grid>
                    <controls:AdaptiveGridView ItemsSource="{x:Bind ViewModel.AudienceChallenges}"
                                               Grid.Row="1"
                                               StretchContentForSingleRow="False"
                                               SelectionMode="None"
                                               Padding="{StaticResource MediumLeftRightMargin}"
                                               DesiredWidth="180"
                                               ItemHeight="160"
                                               animations:ReorderGridAnimation.Duration="300"
                                               Tapped="ChallengeList_Tapped">
                        <controls:AdaptiveGridView.ItemTemplate>
                            <DataTemplate x:DataType="challenges:AudienceChallenge">
                                <Grid x:Name="connectedElement" 
                                      Padding="{StaticResource XSmallLeftTopRightBottomMargin}"
                                      Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
                                    <Grid HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch">
                                        <controls:ImageEx IsCacheEnabled="True"
                                                          PlaceholderSource="/assets/LockScreenLogo.scale-200.png"
                                                          Source="{x:Bind Game.URI}"/>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock
                                                Margin="{StaticResource XXSmallTopMargin}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Bottom"
                                                Text="{x:Bind ChallengeTask}"
                                                Style="{ThemeResource BodyTextStyle}" />
                                            <TextBlock
                                                Margin="{StaticResource XXSmallTopMargin}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Bottom"
                                                Text="{x:Bind Game.Name}"
                                                Style="{ThemeResource BodyTextStyle}" />
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </controls:AdaptiveGridView.ItemTemplate>
                    </controls:AdaptiveGridView>
                    <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Visibility="Collapsed"
                      Grid.Row="1">
                    <Grid.Background>
                        <SolidColorBrush Color="{ThemeResource SystemChromeAltHighColor}" Opacity="0.8" />
                    </Grid.Background>
                    
                    <Grid HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Width="500" Height="200"
                          BorderThickness="1"
                          BorderBrush="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">

                        <StackPanel HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
                            <Grid>
                                <TextBox FontSize="35"
                                         Margin="12" VerticalAlignment="Center"
                                         HorizontalAlignment="Left" />
                                <Button Grid.Column="1"
                                        Click="BackButton_Click"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Right"
                                        Height="40"
                                        Width="40"
                                        Margin="5" 
                                        ToolTipService.ToolTip="Close"
                                        AutomationProperties.Name="Close">
                                    <Button.Content>
                                        <SymbolIcon Symbol="Clear" />
                                    </Button.Content>
                                </Button>
                            </Grid>
                        </StackPanel>
                        
                        <StackPanel HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Orientation="Horizontal">
                            <AppBarButton Label="Save"
                                          Icon="Accept"
                                          Click="SaveButton_Click"/>
                            <AppBarButton Label="Cancel"
                                          Icon="Cancel"
                                          Click="BackButton_Click"/>
                        </StackPanel>
                    </Grid>
                    
                </Grid>
                    <TextBlock x:Name="EmptyAudienceChallenges"
                               Grid.Row="1"
                               Text="No items found"
                               Visibility="Collapsed"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Style="{ThemeResource BodyTextBlockStyle}"
                               Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
