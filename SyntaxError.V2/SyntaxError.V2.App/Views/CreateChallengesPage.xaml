<Page
    x:Class="SyntaxError.V2.App.Views.CreateChallengesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:challenges="using:SyntaxError.V2.Modell.Challenges"
    xmlns:mediaObjects ="using:SyntaxError.V2.Modell.ChallengeObjects"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">

    <Grid 
        x:Name="ContentArea"
        Margin="{StaticResource SmallLeftRightMargin}">
        <Pivot x:Name="ChallengeList"
               Grid.Column="1"
               Grid.RowSpan="3"
               BorderThickness="5, 0, 0, 0"
               BorderBrush="{ThemeResource ApplicationPageBackgroundThemeBrush}"
               SelectionChanged="ChallengeList_SelectionChanged">
            <PivotItem Header="Audience challenges">
                <Grid Padding="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <AutoSuggestBox IsEnabled="True" PlaceholderText="Search" 
                                            TextChanged="AutoSuggestBox_TextChanged"
                                            QuerySubmitted="AutoSuggestBox_QuerySubmitted"
                                            QueryIcon="Find"
                                            Width="300"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"/>
                            <AppBarButton Label="Selection mode"
                                          Click="AppBarButton_SelectionMode_Click">
                                <AppBarButton.Icon>
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                              Glyph="&#xE762;"/>
                                </AppBarButton.Icon>
                            </AppBarButton>
                            <AppBarButton Label="Delete Selected"
                                          Icon="Delete"
                                          Visibility="Collapsed"
                                          Click="AppBarButton_DeleteSelected_Click"/>
                        </StackPanel>
                        <AppBarButton Grid.Column="1"
                                  Icon="Add"
                                  Label="New Challenge"
                                  Click="AddNewChallengeButton_Click"
                                  HorizontalAlignment="Right"/>
                    </Grid>
                    <controls:AdaptiveGridView ItemsSource="{x:Bind ViewModel.FilteredAudience}"
                                               Grid.Row="1"
                                               StretchContentForSingleRow="False"
                                               SelectionMode="None"
                                               Padding="{StaticResource MediumLeftRightMargin}"
                                               DesiredWidth="180"
                                               ItemHeight="160"
                                               animations:ReorderGridAnimation.Duration="300"
                                               Tapped="ChallengeList_Tapped">
                        <controls:AdaptiveGridView.ItemTemplate>
                            <DataTemplate x:DataType="challenges:AudienceChallenge">
                                <Grid x:Name="connectedElement" 
                                      Padding="{StaticResource XSmallLeftTopRightBottomMargin}"
                                      Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
                                    <Grid HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch">
                                        <controls:ImageEx IsCacheEnabled="False"
                                                          PlaceholderSource="/assets/LockScreenLogo.scale-200.png"
                                                          Source="{x:Bind Game.URI}"/>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock
                                                Margin="{StaticResource XXSmallTopMargin}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Bottom"
                                                Text="{x:Bind ChallengeTask}"
                                                Style="{ThemeResource BodyTextStyle}" />
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </controls:AdaptiveGridView.ItemTemplate>
                    </controls:AdaptiveGridView>
                    <Grid HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Visibility="Collapsed"
                          Grid.Row="1">
                        <Grid.Background>
                            <SolidColorBrush Color="{ThemeResource SystemChromeAltHighColor}" Opacity="0.8" />
                        </Grid.Background>

                        <Grid HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Width="650" Height="350"
                              BorderThickness="1"
                              BorderBrush="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
                            <StackPanel HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="100"/>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <TextBox FontSize="35"
                                             Margin="12" VerticalAlignment="Center"
                                             HorizontalAlignment="Left"
                                             Text=""
                                             Grid.Row="0"/>
                                    <Button Grid.Column="1"
                                            Grid.Row="0"
                                            Click="BackButton_Click"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Right"
                                            Height="40"
                                            Width="40"
                                            Margin="5" 
                                            ToolTipService.ToolTip="Close"
                                            AutomationProperties.Name="Close">
                                        <Button.Content>
                                            <SymbolIcon Symbol="Clear" />
                                        </Button.Content>
                                    </Button>
                                    <Grid Grid.Row="1"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"
                                          Margin="50, 0, 50, 0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Grid.RowSpan="3"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="200"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Grid Grid.Column="0"
                                                      VerticalAlignment="Center"
                                                      Height="200" Width="200"
                                                      Background="{ThemeResource ButtonPointerOverBackgroundThemeBrush}"
                                                      Tapped="StackPanel_Tapped">
                                                    <controls:ImageEx IsCacheEnabled="False"
                                                                      Height="200" Width="200"
                                                                      PlaceholderSource="/assets/LockScreenLogo.scale-200.png"/>
                                                    <TextBlock Text="&#xE710;" FontSize="50"
                                                                Padding="0, 75, 0, 0"
                                                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                                                HorizontalTextAlignment="Center"/>
                                                </Grid>
                                                <TextBox Grid.Column="1"
                                                         FontSize="35"
                                                         Margin="12" VerticalAlignment="Center"
                                                         HorizontalAlignment="Left" />
                                                <Button Grid.Column="1"
                                                        Click="BackButton_Click"
                                                        VerticalAlignment="Top"
                                                        HorizontalAlignment="Right"
                                                        Height="40"
                                                        Width="40"
                                                        Margin="5" 
                                                        ToolTipService.ToolTip="Close"
                                                        AutomationProperties.Name="Close">
                                                    <Button.Content>
                                                        <SymbolIcon Symbol="Clear" />
                                                    </Button.Content>
                                                </Button>
                                            </Grid>
                                        </StackPanel>
                                        <ComboBox Grid.Column="1" Grid.Row="0" ItemsSource="{x:Bind ViewModel.Games}"
                                                  Margin="25,0,0,0" VerticalAlignment="Center"
                                                  Width="200" SelectionChanged="ComboBox_SelectionChanged">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate x:DataType="mediaObjects:Game">
                                                    <StackPanel>
                                                        <TextBlock Text="{x:Bind Name}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <TextBox Grid.Column="1" Grid.Row="1"
                                                 Margin="25,0,0,0" VerticalAlignment="Center"
                                                 MinWidth="250" Width="Auto" Height="40"/>
                                    </Grid>
                                </Grid>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        Orientation="Horizontal">
                                <AppBarButton Label="Save"
                                              Icon="Accept"
                                              Click="SaveButton_Click"/>
                                <AppBarButton Label="Cancel"
                                              Icon="Cancel"
                                              Click="BackButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                    <TextBlock x:Name="EmptyAudienceChallenges"
                               Grid.Row="1"
                               Text="No items found"
                               Visibility="Collapsed"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Style="{ThemeResource BodyTextBlockStyle}"
                               Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                </Grid>
            </PivotItem>
            <PivotItem Header="Crew challenges">
                <Grid Padding="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <AutoSuggestBox IsEnabled="True" PlaceholderText="Search" 
                                            TextChanged="AutoSuggestBox_TextChanged"
                                            QuerySubmitted="AutoSuggestBox_QuerySubmitted"
                                            QueryIcon="Find"
                                            Width="300"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"/>
                            <AppBarButton Label="Selection mode"
                                          Click="AppBarButton_SelectionMode_Click">
                                <AppBarButton.Icon>
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                              Glyph="&#xE762;"/>
                                </AppBarButton.Icon>
                            </AppBarButton>
                            <AppBarButton Label="Delete Selected"
                                          Icon="Delete"
                                          Visibility="Collapsed"
                                          Click="AppBarButton_DeleteSelected_Click"/>
                        </StackPanel>
                        <AppBarButton Grid.Column="1"
                                  Icon="Add"
                                  Label="New Challenge"
                                  Click="AddNewChallengeButton_Click"
                                  HorizontalAlignment="Right"/>
                    </Grid>
                    <controls:AdaptiveGridView ItemsSource="{x:Bind ViewModel.FilteredCrew}"
                                               Grid.Row="1"
                                               StretchContentForSingleRow="False"
                                               SelectionMode="None"
                                               Padding="{StaticResource MediumLeftRightMargin}"
                                               DesiredWidth="180"
                                               ItemHeight="160"
                                               animations:ReorderGridAnimation.Duration="300"
                                               Tapped="ChallengeList_Tapped">
                        <controls:AdaptiveGridView.ItemTemplate>
                            <DataTemplate x:DataType="challenges:CrewChallenge">
                                <Grid x:Name="connectedElement" 
                                      Padding="{StaticResource XSmallLeftTopRightBottomMargin}"
                                      Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
                                    <Grid HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch">
                                        <controls:ImageEx IsCacheEnabled="False"
                                                          PlaceholderSource="/assets/LockScreenLogo.scale-200.png"
                                                          Source="{x:Bind Game.URI}"/>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock
                                                Margin="{StaticResource XXSmallTopMargin}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Bottom"
                                                Text="{x:Bind ChallengeTask}"
                                                Style="{ThemeResource BodyTextStyle}" />
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </controls:AdaptiveGridView.ItemTemplate>
                    </controls:AdaptiveGridView>
                    <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Visibility="Collapsed"
                      Grid.Row="1">
                        <Grid.Background>
                            <SolidColorBrush Color="{ThemeResource SystemChromeAltHighColor}" Opacity="0.8" />
                        </Grid.Background>

                        <Grid HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Width="650" Height="350"
                              BorderThickness="1"
                              BorderBrush="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
                            <StackPanel HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="100"/>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <TextBox FontSize="35"
                                             Margin="12" VerticalAlignment="Center"
                                             HorizontalAlignment="Left"
                                             Text=""
                                             Grid.Row="0"/>
                                    <Button Grid.Column="1"
                                            Grid.Row="0"
                                            Click="BackButton_Click"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Right"
                                            Height="40"
                                            Width="40"
                                            Margin="5" 
                                            ToolTipService.ToolTip="Close"
                                            AutomationProperties.Name="Close">
                                        <Button.Content>
                                            <SymbolIcon Symbol="Clear" />
                                        </Button.Content>
                                    </Button>
                                    <Grid Grid.Row="1"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"
                                          Margin="50, 0, 50, 0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Grid.RowSpan="3"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="200"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid Grid.Column="0"
                                                      VerticalAlignment="Center"
                                                      Height="200" Width="200"
                                                      Background="{ThemeResource ButtonPointerOverBackgroundThemeBrush}"
                                                      Tapped="StackPanel_Tapped">
                                                    <controls:ImageEx IsCacheEnabled="False"
                                                                      Height="200" Width="200"
                                                                      PlaceholderSource="/assets/LockScreenLogo.scale-200.png"/>
                                                    <TextBlock Text="&#xE710;" FontSize="50"
                                                                Padding="0, 75, 0, 0"
                                                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                                                HorizontalTextAlignment="Center"/>
                                                </Grid>
                                                <TextBox Grid.Column="1"
                                                         FontSize="35"
                                                         Margin="12" VerticalAlignment="Center"
                                                         HorizontalAlignment="Left" />
                                                <Button Grid.Column="1"
                                                        Click="BackButton_Click"
                                                        VerticalAlignment="Top"
                                                        HorizontalAlignment="Right"
                                                        Height="40"
                                                        Width="40"
                                                        Margin="5" 
                                                        ToolTipService.ToolTip="Close"
                                                        AutomationProperties.Name="Close">
                                                    <Button.Content>
                                                        <SymbolIcon Symbol="Clear" />
                                                    </Button.Content>
                                                </Button>
                                            </Grid>
                                        </StackPanel>
                                        <ComboBox Grid.Column="1" Grid.Row="0" ItemsSource="{x:Bind ViewModel.Games}"
                                                  Margin="25,0,0,0" VerticalAlignment="Center"
                                                  Width="200" SelectionChanged="ComboBox_SelectionChanged">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate x:DataType="mediaObjects:Game">
                                                    <StackPanel>
                                                        <TextBlock Text="{x:Bind Name}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <TextBox Grid.Column="1" Grid.Row="1"
                                                 Margin="25,0,0,0" VerticalAlignment="Center"
                                                 MinWidth="250" Width="Auto" Height="40"/>
                                    </Grid>
                                </Grid>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        Orientation="Horizontal">
                                <AppBarButton Label="Save"
                                              Icon="Accept"
                                              Click="SaveButton_Click"/>
                                <AppBarButton Label="Cancel"
                                              Icon="Cancel"
                                              Click="BackButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                    <TextBlock x:Name="EmptyCrewChallenges"
                               Grid.Row="0"
                               Text="No items found"
                               Visibility="Collapsed"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Style="{ThemeResource BodyTextBlockStyle}"
                               Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                </Grid>
            </PivotItem>
            <PivotItem Header="Multiple choice challenges">
                <Grid Padding="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <AutoSuggestBox IsEnabled="True" PlaceholderText="Search" 
                                            TextChanged="AutoSuggestBox_TextChanged"
                                            QuerySubmitted="AutoSuggestBox_QuerySubmitted"
                                            QueryIcon="Find"
                                            Width="300"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"/>
                            <AppBarButton Label="Selection mode"
                                          Click="AppBarButton_SelectionMode_Click">
                                <AppBarButton.Icon>
                                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                              Glyph="&#xE762;"/>
                                </AppBarButton.Icon>
                            </AppBarButton>
                            <AppBarButton Label="Delete Selected"
                                          Icon="Delete"
                                          Visibility="Collapsed"
                                          Click="AppBarButton_DeleteSelected_Click"/>
                        </StackPanel>
                        <AppBarButton Grid.Column="1"
                                  Icon="Add"
                                  Label="New Challenge"
                                  Click="AddNewChallengeButton_Click"
                                  HorizontalAlignment="Right"/>
                    </Grid>
                    <ListView ItemsSource="{x:Bind ViewModel.FilteredMulti}"
                              x:Name="MultipleChoiceChallengeList"
                              Grid.Row="1"
                              SelectionMode="Single"
                              IsItemClickEnabled="True"
                              Tapped="ChallengeList_Tapped">
                        <ListView.ItemTemplate>
                            <DataTemplate x:Name="MultipleChoiceChallengeDataTemplate"
                                            x:DataType="challenges:MultipleChoiceChallenge">
                                <Grid x:Name="connectedElement">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="{x:Bind ChallengeTask}"
                                                HorizontalAlignment="Stretch"
                                                Style="{ThemeResource SubtitleTextBlockStyle}"
                                                Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <Grid HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Visibility="Collapsed"
                          Grid.Row="1">
                        <Grid.Background>
                            <SolidColorBrush Color="{ThemeResource SystemChromeAltHighColor}" Opacity="0.8" />
                        </Grid.Background>

                        <Grid HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Width="550" Height="300"
                              BorderThickness="1"
                              BorderBrush="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
                            <StackPanel HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="200"/>
                                    </Grid.RowDefinitions>

                                    <TextBox Grid.Row="0"
                                             FontSize="35"
                                             Margin="12" VerticalAlignment="Center"
                                             HorizontalAlignment="Left"/>
                                    <Button Grid.Row="0"
                                            Click="BackButton_Click"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Right"
                                            Height="40"
                                            Width="40"
                                            Margin="5" 
                                            ToolTipService.ToolTip="Close"
                                            AutomationProperties.Name="Close">
                                        <Button.Content>
                                            <SymbolIcon Symbol="Clear" />
                                        </Button.Content>
                                    </Button>
                                    <Grid Grid.Row="1"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <controls:DropShadowPanel Grid.Row="0" Grid.Column="0"
                                                                  Margin="20"
                                                                  BlurRadius="15"
                                                                  ShadowOpacity="1"
                                                                  Color="#77DD77">
                                            <TextBox Name="MultipleChoiceAnswer"
                                                     Width="200" MaxWidth="250"/>
                                        </controls:DropShadowPanel>
                                        <controls:DropShadowPanel Grid.Row="0" Grid.Column="1"
                                                                  Margin="20"
                                                                  BlurRadius="15"
                                                                  ShadowOpacity="1"
                                                                  Color="#FF6961">
                                            <TextBox Name="MultipleChoiceDummy1"
                                                     Width="200" MaxWidth="250"/>
                                        </controls:DropShadowPanel>
                                        <controls:DropShadowPanel Grid.Row="1" Grid.Column="0"
                                                                  Margin="20"
                                                                  BlurRadius="15"
                                                                  ShadowOpacity="1"
                                                                  Color="#FF6961">
                                            <TextBox Name="MultipleChoiceDummy2"
                                                     Width="200" MaxWidth="250"/>
                                        </controls:DropShadowPanel>
                                        <controls:DropShadowPanel Grid.Row="1" Grid.Column="1"
                                                                  Margin="20"
                                                                  BlurRadius="15"
                                                                  ShadowOpacity="1"
                                                                  Color="#FF6961">
                                            <TextBox Name="MultipleChoiceDummy3"
                                                     Width="200" MaxWidth="250"/>
                                        </controls:DropShadowPanel>
                                    </Grid>
                                </Grid>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        Orientation="Horizontal">
                                <AppBarButton Label="Save"
                                              Icon="Accept"
                                              Click="SaveButton_Click"/>
                                <AppBarButton Label="Cancel"
                                              Icon="Cancel"
                                              Click="BackButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                    <TextBlock x:Name="EmptyMultipleChoiceChallenges"
                                Grid.Row="1"
                                Text="No items found"
                                Visibility="Collapsed"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Style="{ThemeResource BodyTextBlockStyle}"
                                Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                </Grid>
            </PivotItem>
            <PivotItem Header="Music challenges">
                <Grid Padding="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <AutoSuggestBox IsEnabled="True" PlaceholderText="Search" 
                                            TextChanged="AutoSuggestBox_TextChanged"
                                            QuerySubmitted="AutoSuggestBox_QuerySubmitted"
                                            QueryIcon="Find"
                                            Width="300"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"/>
                            <AppBarButton Label="Selection mode"
