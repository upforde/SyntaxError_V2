                                </AppBarButton.Icon>
                            </AppBarButton>
                            <AppBarButton Label="Delete Selected"
                                          Icon="Delete"
                                          Visibility="Collapsed"
                                          Click="AppBarButton_DeleteSelected_Click"/>
                        </StackPanel>
                        <AppBarButton Grid.Column="1"
                                  Icon="Add"
                                  Label="New Challenge"
                                  Click="AddNewChallengeButton_Click"
                                  HorizontalAlignment="Right"/>
                    </Grid>
                    <controls:AdaptiveGridView ItemsSource="{x:Bind ViewModel.FilteredMusic}"
                                               Grid.Row="1"
                                               StretchContentForSingleRow="False"
                                               SelectionMode="None"
                                               Padding="{StaticResource MediumLeftRightMargin}"
                                               DesiredWidth="180"
                                               ItemHeight="160"
                                               animations:ReorderGridAnimation.Duration="300"
                                               Tapped="ChallengeList_Tapped">
                        <controls:AdaptiveGridView.ItemTemplate>
                            <DataTemplate x:DataType="challenges:MusicChallenge">
                                <Grid x:Name="connectedElement" 
                                      Padding="{StaticResource XSmallLeftTopRightBottomMargin}"
                                      Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
                                    <Grid HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch">
                                        <controls:ImageEx IsCacheEnabled="False"
                                                          PlaceholderSource="/assets/LockScreenLogo.scale-200.png"
                                                          Source="{x:Bind Song.URI}"/>
                                        <TextBlock
                                            Margin="{StaticResource XXSmallTopMargin}"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            Text="{x:Bind Song.Name}"
                                            Style="{ThemeResource BodyTextStyle}" />
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </controls:AdaptiveGridView.ItemTemplate>
                    </controls:AdaptiveGridView>
                    <Grid HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Visibility="Collapsed"
                          Grid.Row="1">
                        <Grid.Background>
                            <SolidColorBrush Color="{ThemeResource SystemChromeAltHighColor}" Opacity="0.8" />
                        </Grid.Background>

                        <Grid HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Width="650" Height="350"
                              BorderThickness="1"
                              BorderBrush="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
                            <StackPanel HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="100"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBox Grid.Row="0"
                                             FontSize="35"
                                             Margin="12" VerticalAlignment="Center"
                                             HorizontalAlignment="Left" />
                                    <Button Grid.Row="0"
                                            Grid.Column="1"
                                            Click="BackButton_Click"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Right"
                                            Height="40"
                                            Width="40"
                                            Margin="5" 
                                            ToolTipService.ToolTip="Close"
                                            AutomationProperties.Name="Close">
                                        <Button.Content>
                                            <SymbolIcon Symbol="Clear" />
                                        </Button.Content>
                                    </Button>
                                    <Grid Grid.Row="1"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"
                                          Margin="50, 0, 50, 0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="200"/>
