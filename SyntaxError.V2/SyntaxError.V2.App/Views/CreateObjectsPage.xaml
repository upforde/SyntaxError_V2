                            <AppBarButton Label="Save"
                                          Icon="Accept"
                                          Click="SaveButton_Click"/>
                            <AppBarButton Label="Cancel"
                                          Icon="Cancel"
                                          Click="BackButton_Click"/>
                        </StackPanel>
                    </Grid>
                    
                </Grid>
            </Grid>
        </PivotItem>
        
